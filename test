import pygame

pygame.init()

#pokrece ekran
screen = pygame.display.set_mode((800, 600))

#naslov
pygame.display.set_caption("Milk")

#loadanje stvari
#kasnije zamijeniti sliku igraca 
lik = pygame.image.load("avion.jfif")
playerX = 370
playerY = 350
moveSpeed = 8

#polje
polje = pygame.image.load("depositphotos_97647490-stock-illustration-platform-game-tileset-20.jpg")


def player(x, y):
    screen.blit(lik, (x, y))


#lupanje
pokretanje = True

while (pokretanje == True):

    screen.fill((255,255,0))
    

    #KEY INPUTI
    for event in pygame.event.get():

            
        #pokrece micanje
        if(event.type == pygame.KEYDOWN):

            if(event.key == pygame.K_a):
                playerX -= moveSpeed

            if(event.key == pygame.K_d):
                playerX += moveSpeed

            if(event.key == pygame.K_w):

                playerY -= moveSpeed

            if(event.key == pygame.K_s):
                playerY += moveSpeed
    



            
            #TREBAYAUSTAVITI POKRETANJE
            if(event.key == pygame.K_ESCAPE):
                pokretanje = False

    
    polje(playerX,playerY)
    player(playerX,playerY)    
    pygame.display.update()
